  <script>
    document.getElementById('quizForm').addEventListener('submit', function(event) {
      event.preventDefault();

      const name = document.getElementById('name').value.trim();
      const q1 = document.querySelector('input[name="q1"]:checked')?.value || '';
      const q2 = document.getElementById('q2').value;
      const q3 = document.getElementById('q3').value.trim();

      if (!name || !q1 || !q2 || !q3) {
        alert('Por favor, preencha todas as perguntas.');
        return;
      }

      const phoneNumber = '5511965459529'; // Seu número WhatsApp com código do país

      const message = 
        `Respostas do formulário:%0A` +
        `Nome: ${encodeURIComponent(name)}%0A` +
        `1. Qual a capital do Brasil? ${encodeURIComponent(q1)}%0A` +
        `2. Cor do céu em dia claro: ${encodeURIComponent(q2)}%0A` +
        `3. Frase sobre você: ${encodeURIComponent(q3)}`;

      const whatsappURL = `https://wa.me/${phoneNumber}?text=${message}`;

      window.open(whatsappURL, '_blank');
    });
  </script>
